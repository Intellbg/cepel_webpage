---
export interface Props {
    img: string;
    title: string;
}
const { img, title } = Astro.props;
---

<div class="the-header is-marginless">
    <div class="is-6 is-offset-3 is-12-mobile">
        <h1 class="blue-background title-text">{title}</h1>
        <img
            class="header-background"
            src={img}
            id="header-background-id"
            alt="background-img"
        />
    </div>
</div>

<style>
    h1 {
        width: 40%;
        text-align: center;
        position: absolute;
        bottom: 0;
        left: 0;
        padding: 3rem;
    }
    img {
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
    }

    .the-header {
        position: relative;
        padding: 100px 20px;
        height: 400px;
    }

    .header-background {
        position: absolute;
        width: 100%;
        object-fit: cover;
        z-index: -100;
        bottom: 0;
        left: 0;
        right: 0;
    }
    @media only screen and (max-width: 601px) {
        .blue-background {
            width: auto;
            font-size: 40px;
        }
    }
</style>
