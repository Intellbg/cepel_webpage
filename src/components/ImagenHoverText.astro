---
export interface Props {
    img: string;
}
const { img } = Astro.props;
---

<div class="image">
    <img class="image__img" src={img}  />
    <div class="image__overlay image__overlay--primary">
        <slot />
    </div>
</div>

<style>

    .image {
        margin: auto;
        position: relative;
        padding-top: 1em;
        padding-bottom: 1em;
        width: 80%;
    }
    .image__img {
        display: block;
        width: auto;
    }
    .image__overlay--primary {
        background-color: #150f59;
        color: #fff;
        padding: 1em;
    }
    .image__overlay--primary:hover {
        background-color: #150f59;
        opacity: 1;
    }
    .image__overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        color: #fff;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.25s;
    }
</style>
