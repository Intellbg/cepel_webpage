---
import ImagenHoverText from "./ImagenHoverText.astro";
export interface Props {
    img: string;
    img_description: string;
    title: string;
}
const { img, img_description,title } = Astro.props;
---
<div class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-flex is-flex-direction-column is-aling-items-center is-justify-content-center padded">
                <ImagenHoverText img={img}>
                    {img_description}
                </ImagenHoverText>
            </div>
            <div class="column is-flex is-flex-direction-column is-aling-items-center is-justify-content-center">
                <h1 class='title-text blue'>{title}</h1>
                <slot />
            </div>
        </div>
    </div>
</div>
<hr class="blue-background">

<style>
    hr{
        width: 80%;
        height: 1px;
        margin: auto;
    }
    .section{
        background-color: #f2f2f2;
    }
</style>